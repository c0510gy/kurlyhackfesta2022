{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true, // which prevents you from forgetting to return at the end of a function.
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
